<ScreenDatHang>:
    MDBoxLayout: 
        size_hint: (1,1)
        orientation: 'vertical'
        MDBoxLayout:
            id: bigbox_dathang
            orientation: 'vertical'
            size_hint: (1,0.8)
            spacing: 10
        
        MDBoxLayout:
            size_hint: (1,0.1)
            orientation: 'horizontal'
            spacing: 5
            MDTextField:
                id: khach_hang
                hint_text:"Khách hàng"
                font_size:15
            MDLabel: 
                text: 'Tiền mặt'
            MDCheckbox:
                group: "group"
                on_press: root.method_pay(1)
            MDLabel:
                text: 'Chuyển khoản' 
            MDCheckbox:
                group: "group"
                on_press: root.method_pay(2)


                

            Widget: 
                size_hint_x:1
        
            MDRaisedButton:
                text: "Đặt hàng"
                on_release: root.open_dialog() 

       
